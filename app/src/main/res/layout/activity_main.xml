<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etxtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/etxt_name_hint"
                android:maxLength="50"
                android:maxLines="1"
                android:textAppearance="?android:textAppearanceLarge" />

            <EditText
                android:id="@+id/etxtId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/etxt_id_hint"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_smoothie_text"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_smoothie_description"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbxStrawberrySmoothie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:nextFocusRight="@+id/etxtStrawberrySmoothie"
                        android:onClick="checkBoxClicked"
                        android:text="@string/cbx_strawberry_text"
                        android:textAppearance="?android:textAppearanceLarge" />

                    <EditText
                        android:id="@+id/etxtStrawberrySmoothie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:ems="2"
                        android:enabled="false"
                        android:gravity="end|center_vertical"
                        android:hint="@string/etxt_qty"
                        android:inputType="number"
                        android:text="@string/qty_1"
                        android:visibility="invisible" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbxMixedBerrySmoothie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:nextFocusRight="@+id/etxtMixedBerrySmoothie"
                        android:onClick="checkBoxClicked"
                        android:text="@string/cbx_mixed_berry_smoothie_text"
                        android:textAppearance="?android:textAppearanceLarge" />

                    <EditText
                        android:id="@+id/etxtMixedBerrySmoothie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:ems="2"
                        android:enabled="false"
                        android:gravity="end|center_vertical"
                        android:hint="@string/etxt_qty"
                        android:inputType="number"
                        android:text="@string/qty_1"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbxTropicalFruitSmoothie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:nextFocusRight="@+id/etxtTropicalFruitSmoothie"
                        android:onClick="checkBoxClicked"
                        android:text="@string/cbx_tropical_fruit_smoothie_text"
                        android:textAppearance="?android:textAppearanceLarge" />

                    <EditText
                        android:id="@+id/etxtTropicalFruitSmoothie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:ems="2"
                        android:enabled="false"
                        android:gravity="end|center_vertical"
                        android:hint="@string/etxt_qty"
                        android:inputType="number"
                        android:text="@string/qty_1"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_iced_drinks_text"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_iced_drinks_description"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <LinearLayout
