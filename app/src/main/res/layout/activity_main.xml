                        android:onClick="checkBoxClicked"
                        android:text="@string/cbx_iced_caramel_text"
                        android:textAppearance="?android:textAppearanceLarge" />

                    <EditText
                        android:id="@+id/etxtIcedCaramel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:ems="2"
                        android:enabled="false"
                        android:gravity="end|center_vertical"
                        android:hint="@string/etxt_qty"
                        android:inputType="number"
                        android:text="@string/qty_1"
                        android:visibility="invisible" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbxIcedChocolate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:nextFocusRight="@+id/etxtIcedChocolate"
                        android:onClick="checkBoxClicked"
                        android:text="@string/cbx_iced_chocolate_text"
                        android:textAppearance="?android:textAppearanceLarge" />

                    <EditText
                        android:id="@+id/etxtIcedChocolate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:ems="2"
                        android:enabled="false"
                        android:gravity="end|center_vertical"
                        android:hint="@string/etxt_qty"
                        android:inputType="number"
                        android:text="@string/qty_1"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbxIcedVanillaCappuccino"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:nextFocusRight="@+id/etxtIcedVanillaCappuccino"
                        android:onClick="checkBoxClicked"
                        android:text="@string/cbx_iced_vanilla_cappuccino_text"
                        android:textAppearance="?android:textAppearanceLarge" />

                    <EditText
                        android:id="@+id/etxtIcedVanillaCappuccino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:ems="2"
                        android:enabled="false"
                        android:gravity="end|center_vertical"
                        android:hint="@string/etxt_qty"
                        android:inputType="number"
                        android:text="@string/qty_1"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbxIcedChai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:nextFocusRight="@+id/etxtIcedChai"
                        android:onClick="checkBoxClicked"
                        android:text="@string/txt_iced_chai_text"
                        android:textAppearance="?android:textAppearanceLarge" />

                    <EditText
                        android:id="@+id/etxtIcedChai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:ems="2"
                        android:enabled="false"
                        android:gravity="end|center_vertical"
                        android:hint="@string/etxt_qty"
                        android:inputType="number"
                        android:text="@string/qty_1"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_hot_drinks_text"
                    android:textAppearance="?android:textAppearanceLarge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbxChaiTea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:nextFocusRight="@+id/etxtChaiTea"
                        android:onClick="checkBoxClicked"
                        android:text="@string/cbx_chai_tea_text"
                        android:textAppearance="?android:textAppearanceLarge" />

                    <EditText
                        android:id="@+id/etxtChaiTea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:ems="2"
                        android:enabled="false"
                        android:gravity="end|center_vertical"
                        android:hint="@string/etxt_qty"
                        android:inputType="number"
                        android:text="@string/qty_1"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbxGreenTea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:nextFocusRight="@+id/etxtGreenTea"
                        android:onClick="checkBoxClicked"
                        android:text="@string/cbx_green_tea_text"
                        android:textAppearance="?android:textAppearanceLarge" />

                    <EditText
